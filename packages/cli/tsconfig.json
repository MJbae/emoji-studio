{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../shared/src/*"]
    }
  },
  "include": [
    "src",
    "../shared/src/types",
    "../shared/src/constants",
    "../shared/src/utils",
    "../shared/src/services/gemini",
    "../shared/src/services/config",
    "../shared/src/services/pipeline",
    "../shared/src/platform",
    "../shared/src/bridge",
    "../shared/src/store",
    "../shared/src/vite-env.d.ts"
  ],
  "exclude": [
    "tests",
    "dist",
    "node_modules",
    "../shared/src/**/*.test.ts",
    "../shared/src/**/*.test.tsx",
    "../shared/src/msw"
  ]
}
